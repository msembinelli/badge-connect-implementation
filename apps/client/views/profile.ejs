<body>
  <div class="navbar">
    <div class="container">
      <span class="logo">
        FinAggregator
      </span>
      <img class="_profile" src="<%= profile.photo %>" alt="" srcset="" />
    </div>
  </div>
  <div class="wrapper">
    <div class="profile">
      <div class="cover">
        <span>Profile</span>
        <button>Add Cover Photo</button>
      </div>
      <div class="details">
        <div class="avatar">
          <img src="<%= profile.photo %>" alt="" />
        </div>
        <div class="info">
          <span class="name">
            <%= profile.name %>&nbsp;
          </span>
          <span class="job"><%= profile.jobTitle %></span>
