      <div class="connect">
        <h3>TPP App Register</h3>
        <div class="form">
          <form action="/register?url=http://localhost:4000/.well-known/openatbaccounts.json" method="post"
            class="form-group">
            <span>Register FinAggregator with
              http://localhost:4000/.well-known/openatbaccounts.json</span>
            <button type="submit">Register</button>
          </form>
        </div>
      </div>
      <br />
      <div class="connect">
        <h3>Connect</h3>
        <div class="form">
          <form action="/redirect" method="post" class="form-group">
            <span>Connect with</span>
            <select name="selectedClient">
              <% if (clients && clients.length) { for (let i = 0; i <
                clients.length; i++) { %>
              <option value="<%= clients[i].authUrl %>">
                <%= clients[i].name %>
              </option>
              <% }} %>
            </select>
            <button type="submit">Three Legged Auth & Create Consent</button>
          </form>
          <form action="/consent/redirect" method="post" class="form-group">
            <span>Connect with</span>
            <select name="selectedClientGrantId">
              <% if (clients && clients.length) { for (let i = 0; i <
                                        clients.length; i++) { %>
              <option value="<%= clients[i]._id %>">
                <%= clients[i].name %>
              </option>
              <% }} %>
            </select>
            <button type="submit">Client Credential & Create Consent</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

